<ui:FluentWindow x:Class="RedPDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:RedPDF.ViewModels"
        xmlns:controls="clr-namespace:RedPDF.Controls"
        xmlns:helpers="clr-namespace:RedPDF.Helpers"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Width="1200"
        Height="800"
        MinWidth="800"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">
    
    <Window.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.InputBindings>
        <!-- File Operations -->
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenFileCommand}"/>
        <KeyBinding Key="W" Modifiers="Ctrl" Command="{Binding CloseFileCommand}"/>
        
        <!-- Navigation -->
        <KeyBinding Key="PageDown" Command="{Binding NextPageCommand}"/>
        <KeyBinding Key="PageUp" Command="{Binding PreviousPageCommand}"/>
        <KeyBinding Key="Home" Command="{Binding FirstPageCommand}"/>
        <KeyBinding Key="End" Command="{Binding LastPageCommand}"/>
        
        <!-- Zoom -->
        <KeyBinding Key="OemPlus" Modifiers="Ctrl" Command="{Binding ZoomInCommand}"/>
        <KeyBinding Key="OemMinus" Modifiers="Ctrl" Command="{Binding ZoomOutCommand}"/>
        
        <!-- UI Toggle -->
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{Binding ToggleSidebarCommand}"/>
        
        <!-- Search -->
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding ToggleSearchCommand}"/>
        <KeyBinding Key="F3" Command="{Binding NextSearchResultCommand}"/>
        <KeyBinding Key="F3" Modifiers="Shift" Command="{Binding PreviousSearchResultCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding ToggleSearchCommand}"/>
    </Window.InputBindings>

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <!-- Title Bar -->
            <RowDefinition Height="32"/>
            <!-- Toolbar -->
            <RowDefinition Height="44"/>
            <!-- Content -->
            <RowDefinition Height="*"/>
            <!-- Status Bar -->
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="#252526">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- App Icon and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="📄" FontSize="14" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding FileName}" 
                           Foreground="#CCCCCC" 
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Window Controls -->
            <ui:TitleBar Grid.Column="2" ShowMaximize="True" ShowMinimize="True" ShowClose="True"/>
        </Grid>
        
        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#252526" 
                BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="8,0">
                <!-- Open File Button -->
                <ui:Button ToolTip="Open File (Ctrl+O)" 
                           Command="{Binding OpenFileCommand}"
                           Appearance="Secondary"
                           Margin="2">
                    <Image Source="{StaticResource FolderOpenIcon}" Width="16" Height="16"/>
                </ui:Button>
                
                <Border Width="1" Background="#3C3C3C" Margin="8,6"/>
                
                <!-- Navigation -->
                <ui:Button ToolTip="First Page" 
                           Command="{Binding FirstPageCommand}"
                           Appearance="Secondary"
                           Margin="2">
                    <Image Source="{StaticResource ChevronFirstIcon}" Width="16" Height="16"/>
                </ui:Button>
                <ui:Button ToolTip="Previous Page" 
                           Command="{Binding PreviousPageCommand}"
                           Appearance="Secondary"
                           Margin="2">
                    <Image Source="{StaticResource ChevronLeftIcon}" Width="16" Height="16"/>
                </ui:Button>
                
                <!-- Page Indicator -->
                <Border Background="#3C3C3C" CornerRadius="4" Padding="12,4" Margin="4,0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding CurrentPage}" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                        <TextBlock Text=" / " Foreground="#8A8A8A" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalPages}" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <ui:Button ToolTip="Next Page" 
                           Command="{Binding NextPageCommand}"
                           Appearance="Secondary"
                           Margin="2">
                    <Image Source="{StaticResource ChevronRightIcon}" Width="16" Height="16"/>
                </ui:Button>
                <ui:Button ToolTip="Last Page" 
                           Command="{Binding LastPageCommand}"
                           Appearance="Secondary"
                           Margin="2">
                    <Image Source="{StaticResource ChevronLastIcon}" Width="16" Height="16"/>
                </ui:Button>
                
                <Border Width="1" Background="#3C3C3C" Margin="8,6"/>
                
                <!-- Zoom -->
                <ui:Button ToolTip="Zoom Out (Ctrl+-)" 
                           Command="{Binding ZoomOutCommand}"
                           Appearance="Secondary"
                           Margin="2">
                    <Image Source="{StaticResource ZoomOutIcon}" Width="16" Height="16"/>
                </ui:Button>
                
                <Border Background="#3C3C3C" CornerRadius="4" Padding="12,4" Margin="4,0" 
                        VerticalAlignment="Center" MinWidth="60">
                    <TextBlock HorizontalAlignment="Center" Foreground="#CCCCCC">
                        <Run Text="{Binding ZoomLevel, StringFormat={}{0:F0}}"/>
                        <Run Text="%"/>
                    </TextBlock>
                </Border>
                
                <ui:Button ToolTip="Zoom In (Ctrl++)" 
                           Command="{Binding ZoomInCommand}"
                           Appearance="Secondary"
                           Margin="2">
                    <Image Source="{StaticResource ZoomInIcon}" Width="16" Height="16"/>
                </ui:Button>
                
                <Border Width="1" Background="#3C3C3C" Margin="8,6"/>
                
                <!-- Sidebar Toggle -->
                <ui:Button ToolTip="Toggle Sidebar (Ctrl+B)" 
                           Command="{Binding ToggleSidebarCommand}"
                           Appearance="Secondary"
                           Margin="2">
                    <Image Source="{StaticResource MenuIcon}" Width="16" Height="16"/>
                </ui:Button>
                
                <Border Width="1" Background="#3C3C3C" Margin="8,6"/>
                
                <!-- Search Button -->
                <ui:Button ToolTip="Search (Ctrl+F)" 
                           Command="{Binding ToggleSearchCommand}"
                           Appearance="Secondary"
                           Margin="2">
                    <Image Source="{StaticResource SearchIcon}" Width="16" Height="16"/>
                </ui:Button>
                
                <!-- Search Bar (Expandable) -->
                <Border Background="#3C3C3C" 
                        CornerRadius="4" 
                        Padding="4,2" 
                        Margin="4,0"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsSearchVisible, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="SearchTextBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200"
                                 Background="Transparent"
                                 Foreground="#CCCCCC"
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 Padding="4,4">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        
                        <!-- Search Execute Button -->
                        <ui:Button ToolTip="Search"
                                   Command="{Binding SearchCommand}"
                                   Appearance="Secondary"
                                   Padding="4,2"
                                   Margin="2,0">
                            <Image Source="{StaticResource EnterIcon}" Width="14" Height="14"/>
                        </ui:Button>
                        
                        <!-- Result Navigation -->
                        <Border Width="1" Background="#5C5C5C" Margin="4,4"/>
                        
                        <TextBlock VerticalAlignment="Center" 
                                   Foreground="#8A8A8A" 
                                   FontSize="11"
                                   Margin="4,0"
                                   Visibility="{Binding IsDocumentLoaded, Converter={StaticResource BoolToVisibility}}">
                            <Run Text="{Binding CurrentResultIndex}"/>
                            <Run Text="/"/>
                            <Run Text="{Binding TotalResults}"/>
                        </TextBlock>
                        
                        <ui:Button ToolTip="Previous (Shift+F3)"
                                   Command="{Binding PreviousSearchResultCommand}"
                                   Appearance="Secondary"
                                   Padding="4,2"
                                   Margin="2,0">
                            <Image Source="{StaticResource ChevronUpIcon}" Width="12" Height="12"/>
                        </ui:Button>
                        
                        <ui:Button ToolTip="Next (F3)"
                                   Command="{Binding NextSearchResultCommand}"
                                   Appearance="Secondary"
                                   Padding="4,2"
                                   Margin="2,0">
                            <Image Source="{StaticResource ChevronDownIcon}" Width="12" Height="12"/>
                        </ui:Button>
                        
                        <!-- Close Search -->
                        <ui:Button ToolTip="Close (Esc)"
                                   Command="{Binding ToggleSearchCommand}"
                                   Appearance="Secondary"
                                   Padding="4,2"
                                   Margin="2,0">
                            <Image Source="{StaticResource CloseIcon}" Width="12" Height="12"/>
                        </ui:Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Sidebar -->
                <ColumnDefinition Width="Auto"/>
                <!-- PDF Viewer -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar with Page Thumbnails -->
            <Border Grid.Column="0" 
                    Width="200"
                    Background="#252526"
                    BorderBrush="#3C3C3C"
                    BorderThickness="0,0,1,0"
                    Visibility="{Binding IsSidebarVisible, Converter={StaticResource BoolToVisibility}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Sidebar Header -->
                    <Border Grid.Row="0" Padding="12,10" 
                            BorderBrush="#3C3C3C" 
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="PAGES" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Foreground="#8A8A8A"/>
                    </Border>
                    
                    <!-- Page Thumbnails List -->
                    <ListBox Grid.Row="1" 
                             Background="Transparent"
                             BorderThickness="0"
                             ItemsSource="{Binding PageThumbnails}"
                             SelectedItem="{Binding SelectedThumbnail}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="4" 
                                        Background="#2D2D30" 
                                        CornerRadius="4"
                                        BorderBrush="Transparent"
                                        BorderThickness="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Thumbnail Image -->
                                        <Border Grid.Column="0" 
                                                Width="60" Height="80"
                                                Background="#3C3C3C"
                                                CornerRadius="2">
                                            <Image Source="{Binding ThumbnailImage}" 
                                                   Stretch="Uniform"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>
                                        
                                        <!-- Page Number -->
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding PageNumber, StringFormat=Page {0}}" 
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Foreground="#CCCCCC"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#264F78"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#3C3C3C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- PDF Content Area -->
            <Border Grid.Column="1" Background="#1E1E1E">
                <Grid>
                    <!-- Welcome/Empty State -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsDocumentLoaded, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}">
                        <TextBlock Text="📄" FontSize="64" HorizontalAlignment="Center"/>
                        <TextBlock Text="Open a PDF to get started"
                                   FontSize="16"
                                   Foreground="#8A8A8A"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,8"/>
                        <TextBlock Text="Press Ctrl+O to open a file"
                                   FontSize="12"
                                   Foreground="#6A6A6A"
                                   HorizontalAlignment="Center"/>
                        
                        <ui:Button Content="Open PDF"
                                   Command="{Binding OpenFileCommand}"
                                   Appearance="Primary"
                                   Margin="0,24,0,0"
                                   Padding="24,8"/>
                    </StackPanel>
                    
                    <!-- PDF Viewer Control -->
                    <controls:PdfViewerControl x:Name="PdfViewer"
                                               Document="{Binding CurrentDocument}"
                                               Zoom="{Binding ZoomLevel}"
                                               CurrentPageIndex="{Binding CurrentPage, Mode=TwoWay}"
                                               Visibility="{Binding IsDocumentLoaded, Converter={StaticResource BoolToVisibility}}"/>
                    
                    <!-- Loading Overlay -->
                    <Border Background="#80000000"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" 
                                         Width="200" 
                                         Height="4"
                                         Foreground="#0078D4"/>
                            <TextBlock Text="Loading..."
                                       Foreground="#CCCCCC"
                                       HorizontalAlignment="Center"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#0078D4">
            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Status Message -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}"
                           Foreground="White"
                           FontSize="11"
                           VerticalAlignment="Center"/>
                
                <!-- Page & Zoom Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            Visibility="{Binding IsDocumentLoaded, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock VerticalAlignment="Center" Foreground="White" FontSize="11">
                        <Run Text="Page "/>
                        <Run Text="{Binding CurrentPage}"/>
                        <Run Text=" of "/>
                        <Run Text="{Binding TotalPages}"/>
                    </TextBlock>
                    
                    <Border Width="1" Background="#FFFFFF60" Margin="12,4"/>
                    
                    <TextBlock VerticalAlignment="Center" Foreground="White" FontSize="11">
                        <Run Text="{Binding ZoomLevel, StringFormat={}{0:F0}}"/>
                        <Run Text="%"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>
