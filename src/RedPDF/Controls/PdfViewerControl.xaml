<UserControl x:Class="RedPDF.Controls.PdfViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RedPDF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="800"
             Background="#1E1E1E">
    
    <UserControl.Resources>
        <DropShadowEffect x:Key="PageShadow"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Direction="270"
                          Color="#000000"
                          Opacity="0.3"/>
    </UserControl.Resources>
    
    <Grid>
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay"
                Background="#80000000"
                Visibility="Collapsed"
                Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="4"
                             Foreground="#0078D4"/>
                <TextBlock Text="Loading..."
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- PDF Pages ScrollViewer -->
        <ScrollViewer x:Name="PageScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#1E1E1E"
                      PanningMode="Both">
            
            <!-- Pages Container -->
            <ItemsControl x:Name="PagesContainer"
                          HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"
                                                VirtualizationMode="Recycling"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,8"
                                Background="White"
                                BorderBrush="#3C3C3C"
                                BorderThickness="1"
                                Effect="{StaticResource PageShadow}">
                            <Grid Width="{Binding RenderedImage.Width}" Height="{Binding RenderedImage.Height}">
                                <Image Source="{Binding RenderedImage}"
                                       Stretch="None"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <local:AnnotationOverlay PageIndex="{Binding PageIndex}"
                                                       Scale="{Binding RenderedScale}"
                                                       Characters="{Binding Characters}"
                                                       AnnotationsSource="{Binding RelativeSource={RelativeSource AncestorType=local:PdfViewerControl}, Path=AnnotationService.Annotations}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Annotation Popup -->
        <local:AnnotationPopup x:Name="AnnotationMenu"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Visibility="Collapsed"
                             HighlightRequested="OnHighlightRequested"
                             UnderlineRequested="OnUnderlineRequested"
                             NoteRequested="OnNoteRequested"
                             CopyRequested="OnCopyRequested"/>
    </Grid>
</UserControl>
