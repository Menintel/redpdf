<UserControl x:Class="RedPDF.Controls.AnnotationOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RedPDF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600"
             Background="Transparent"
             MouseLeftButtonDown="OnMouseDown"
             MouseMove="OnMouseMove"
             MouseLeftButtonUp="OnMouseUp">
    
    <Grid>
        <!-- Text Selection Layer (Blue Highlight) -->
        <Canvas x:Name="SelectionLayer" IsHitTestVisible="False"/>
        
        <!-- Existing Annotations Layer -->
        <Canvas x:Name="AnnotationsLayer" IsHitTestVisible="False"/>
    </Grid>
</UserControl>
